version: "3.8"
services:
  nginx:
    image: nginx
    container_name: nginx
    ports: 
      - 80:80
      - 443:443
    volumes: 
      - ./config/nginx.conf:/etc/nginx/nginx.conf
      - ./config:/etc/other
    links:
      - server
      - web
  mongodb:
    image: mongo:4
    container_name: mongodb
    ports: 
      - 27017:27017
    volumes: 
      - /usr/local/docker/mongo/data:/data/db
      - /usr/local/docker/mongo/configdb:/data/configdb
  server:
    build: ./server
    container_name: server
    restart: always
    ports:
      - 3000:3000
    external_links:
      - "mongodb:mongodb"
    volumes:
      - ./server/uploads:/server/uploads
  web:
    build: ./web
    container_name: web
    restart: always
    ports:
      - 8000:8000
    environment:
      - BASE_URL=http://server:3000/web/api
    external_links:
      - "server:server"
      - "mongodb:mongodb"
networks:
    default:
      - ipv6: false
